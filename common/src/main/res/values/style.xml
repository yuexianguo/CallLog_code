<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="BaseStrutTheme" parent="Theme.AppCompat.Light.NoActionBar">

    </style>

    <style name="AppTheme.ActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/x32</item>
    </style>

    <style name="CommonItemTitle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/x36</item>
    </style>

    <style name="CommonItemDesc">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/x30</item>
    </style>

    <style name="CommonItemDescSmaller">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/x24</item>
    </style>

    <style name="CommonItemContent">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/x32</item>
    </style>

    <style name="CommonSettingItemView">
        <item name="settingNameColor">@color/commonColorWhite</item>
        <item name="settingNameSize">@dimen/x34</item>
        <item name="settingDescColor">@color/commonColorGray</item>
        <item name="settingDescSize">@dimen/x32</item>
    </style>

    <style name="CommonItemBtn">
        <item name="android:textColor">@color/commonColorWhite</item>
        <item name="android:textSize">@dimen/x30</item>
        <item name="android:background">@drawable/common_selector_btn_bg</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">@dimen/x360</item>
        <item name="android:layout_height">@dimen/x90</item>
    </style>

    <style name="commonBaseDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <dimen name="adpter_item_margin_top">@dimen/x15</dimen>
    <dimen name="fragment_padding">@dimen/x30</dimen>
    <dimen name="setting_item_height">@dimen/x100</dimen>

    <style name="commonTimer" parent="@android:style/Widget.Material.TimePicker">
        <item name="android:textColorPrimary">@color/commonTextColor</item>
        <item name="colorControlNormal">@color/commonTextColor</item>
    </style>

    <style name="ItemTitle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/x34</item>
    </style>

    <style name="ItemDesc">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/x28</item>
    </style>
    <style name="My_CheckBox" parent="@android:style/Widget.Material.CompoundButton.CheckBox">
        <item name="android:colorControlActivated">@android:color/white</item>
        <item name="android:colorControlNormal">@android:color/white</item>
    </style>
</resources>